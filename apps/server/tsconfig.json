{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "lib": ["ESNext"],
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types",
      "./src/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
      "@config/*": ["src/config/*"],
      "@app/*": ["src/app/*"],
      "src/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}
